@import './styles/design-system.css';

.App {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--background-cream);
}

.app-layout {
  display: flex;
  height: 100vh;
  overflow: hidden;
  background-color: var(--background-cream);
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-color: var(--background-cream);
}

.content {
  flex: 1;
  overflow-y: auto;
  background-color: var(--background-cream);
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .sidebar {
    position: fixed;
    left: -250px;
    top: 0;
    height: 100vh;
    z-index: 1000;
    transition: left 0.3s ease;
  }
  
  .sidebar.collapsed {
    left: -70px;
  }
  
  .sidebar.mobile-open {
    left: 0;
  }
  
  .sidebar.collapsed.mobile-open {
    left: 0;
    width: 70px;
  }
  
  .main-content {
    width: 100%;
    margin-left: 0;
  }
  
  .mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }
}

@media (min-width: 769px) {
  .main-content {
    margin-left: 0;
  }
}

/* Utility classes for spacing and layout */
.space-y-4 > * + * {
  margin-top: var(--spacing-4);
}

.flex {
  display: flex;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.items-start {
  align-items: flex-start;
}

.items-center {
  align-items: center;
}

.gap-2 {
  gap: var(--spacing-2);
}

.gap-3 {
  gap: var(--spacing-3);
}

.gap-4 {
  gap: var(--spacing-4);
}

.mb-2 {
  margin-bottom: var(--spacing-2);
}

.mb-3 {
  margin-bottom: var(--spacing-3);
}

.mb-4 {
  margin-bottom: var(--spacing-4);
}

.mt-3 {
  margin-top: var(--spacing-3);
}

.text-center {
  text-align: center;
}

.flex-1 {
  flex: 1;
}

.opacity-75 {
  opacity: 0.75;
}

/* Loading states */
.loading-container-sm {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-8);
  min-height: 200px;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-16);
  min-height: 300px;
}

.loading-container-lg {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-16);
  min-height: 400px;
}

.loading-text {
  color: var(--gray-500);
  font-size: var(--font-size-sm);
  margin-top: var(--spacing-2);
}

/* Enhanced card hover effects */
.card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-1px);
  transition: all 0.2s ease;
}

/* Form enhancements */
.form-input:focus {
  outline: none;
  border-color: var(--primary-brown);
  box-shadow: 0 0 0 3px rgb(139 69 19 / 0.1);
}

textarea.form-input {
  resize: vertical;
  min-height: 100px;
}

/* Table styles for data display */
.data-table {
  width: 100%;
  border-collapse: collapse;
  background: white;
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.data-table th,
.data-table td {
  padding: var(--spacing-3) var(--spacing-4);
  text-align: left;
  border-bottom: 1px solid var(--gray-200);
}

.data-table th {
  background: var(--gray-50);
  font-weight: 600;
  color: var(--gray-700);
  font-size: var(--font-size-sm);
}

.data-table tr:hover {
  background: var(--gray-50);
}

.data-table tr:last-child td {
  border-bottom: none;
}

/* Chart container improvements */
.chart-container {
  background: white;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-4);
  box-shadow: var(--shadow-sm);
}

/* Mobile-specific improvements */
@media (max-width: 640px) {
  .page-container {
    padding: var(--spacing-4);
  }
  
  .heading-1 {
    font-size: var(--font-size-2xl);
  }
  
  .heading-2 {
    font-size: var(--font-size-xl);
  }
  
  .btn {
    width: 100%;
    justify-content: center;
  }
  
  .flex-mobile-column {
    flex-direction: column;
  }
  
  .grid {
    gap: var(--spacing-4);
  }
}

/* Accessibility improvements */
.btn:focus,
.form-input:focus,
.nav-item:focus {
  outline: 2px solid var(--primary-brown);
  outline-offset: 2px;
}

/* Animation for loading states */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

/* Print styles */
@media print {
  .sidebar,
  .header,
  .btn,
  .mobile-menu-btn {
    display: none !important;
  }
  
  .main-content {
    margin-left: 0 !important;
  }
  
  .page-container {
    padding: 0 !important;
  }
}
