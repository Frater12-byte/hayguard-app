.team-management {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.team-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}

.team-header h1 {
  font-size: 2rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0;
}

.invite-btn {
  background: #7c4219;
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.2s;
}

.invite-btn:hover {
  background: #5c2f14;
}

.status-message {
  padding: 15px 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  font-weight: 500;
}

.status-message.success {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.status-message.error {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

.status-message.info {
  background: #d1ecf1;
  color: #0c5460;
  border: 1px solid #bee5eb;
}

.status-message small {
  display: block;
  margin-top: 8px;
  opacity: 0.8;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.invite-modal {
  background: white;
  border-radius: 12px;
  padding: 30px;
  width: 100%;
  max-width: 500px;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
}

.modal-header h3 {
  font-size: 1.4rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0;
}

.close-modal-btn {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: #666;
  padding: 0;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 8px;
}

.form-group input,
.form-group select {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid #e1e5e9;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.2s;
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: #f7b32b;
}

.modal-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  margin-top: 25px;
}

.cancel-btn {
  background: #f8f9fa;
  border: 2px solid #e1e5e9;
  color: #666;
  padding: 12px 24px;
  border-radius: 8px;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s;
}

.cancel-btn:hover {
  background: #e9ecef;
}

.send-invite-btn {
  background: #7c4219;
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.2s;
}

.send-invite-btn:hover:not(:disabled) {
  background: #5c2f14;
}

.send-invite-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.team-members {
  display: grid;
  gap: 20px;
  margin-bottom: 40px;
}

.member-card {
  background: white;
  border-radius: 12px;
  padding: 25px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.member-info {
  display: flex;
  align-items: center;
  gap: 20px;
  flex: 1;
}

.member-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  object-fit: cover;
}

.member-details h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0 0 4px 0;
}

.member-email {
  color: #666;
  margin: 0 0 8px 0;
  font-size: 0.95rem;
}

.member-meta {
  display: flex;
  gap: 15px;
  margin-bottom: 4px;
}

.member-role {
  background: #f1f5f9;
  color: #2c3e50;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 0.85rem;
  font-weight: 500;
}

.member-status {
  font-size: 0.85rem;
  font-weight: 600;
}

.member-join-date {
  color: #666;
  font-size: 0.85rem;
  margin: 0;
}

.member-actions {
  display: flex;
  gap: 10px;
}

.reset-password-btn {
  background: #f7b32b;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s;
}

.reset-password-btn:hover:not(:disabled) {
  background: #d19a1f;
}

.reset-password-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.email-notice {
  background: #f8f9fa;
  border: 1px solid #e1e5e9;
  border-radius: 12px;
  padding: 25px;
}

.email-notice h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0 0 15px 0;
}

.email-notice p {
  color: #666;
  margin: 0 0 15px 0;
}

.email-notice ul {
  color: #666;
  margin: 0;
  padding-left: 20px;
}

.email-notice li {
  margin-bottom: 8px;
}

@media (max-width: 768px) {
  .team-header {
    flex-direction: column;
    gap: 15px;
    align-items: stretch;
  }
  
  .member-card {
    flex-direction: column;
    gap: 20px;
    align-items: stretch;
  }
  
  .member-info {
    flex-direction: column;
    text-align: center;
  }
  
  .member-meta {
    justify-content: center;
  }
  
  .modal-actions {
    flex-direction: column;
  }
  
  .invite-modal {
    margin: 20px;
    padding: 20px;
  }
}
