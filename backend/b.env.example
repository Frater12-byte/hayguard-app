# HayGuard Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hayguard_production
DB_USER=hayguard_user
DB_PASSWORD=your_secure_database_password_here

# JWT Configuration - MUST BE 64+ CHARACTERS!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=paste_your_64_character_jwt_secret_here

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://hayguard-app.com

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for alerts and team invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@hayguard-app.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=HayGuard Alerts <alerts@hayguard-app.com>

# Weather API (optional - get from OpenWeatherMap)
OPENWEATHER_API_KEY=your_openweather_api_key

# SMS Configuration (optional)
TWILIO_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE=+1234567890

# File Upload & Reports
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=604800